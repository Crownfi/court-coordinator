{
	"name": "@crownfi/court-coordinator-webapp",
	"version": "0.1.0",
	"main": "dist/bundles/index.js",
	"license": "GPL-3.0-only",
	"type": "module",
	"scripts": {
		"start": "http-server -p 8080 -c-1 ./dist",
		"build": "rm -rf dist/* && mkdir -p dist && npm run build:webpack && npm run build:copy-static",
		"build:webpack": "webpack --mode=development",
		"build:webpack:final": "webpack --mode=production",
		"build:copy-static": "cp -R ./static/* ./dist/",
		"build:final": "rm -rf dist/* && mkdir -p dist && npm run build:webpack:final && npm run build:copy-assets && npm run build:copy-static",
		"bloat-finder": "webpack --json > stats.json",
		"codegen": "cewt codegen --inline-html --extended-form-controls ./src"
	},
	"dependencies": {
		"@cosmjs/cosmwasm-stargate": "^0.32.4",
		"@cosmjs/proto-signing": "^0.32.4",
		"@cosmjs/stargate": "^0.32.4",
		"@crownfi/sei-js-core": "^5.2.4",
		"@crownfi/sei-utils": "^0.3.11",
		"@crownfi/sei-webui-utils": "^0.3.11",
		"@crownfi/court-coordinator-sdk": "^0.9.0",
		"@aritz-cracker/browser-utils": "^1.3.2",
		"@crownfi/css-gothic-fantasy": "^1.7.4",
		"is-utf8": "^0.2.1"
	},
	"devDependencies": {
		"buffer-lite": "^2.1.0",
		"css-loader": "^7.1.2",
		"css-minimizer-webpack-plugin": "^7.0.0",
		"http-server": "^14.1.1",
		"mini-css-extract-plugin": "^2.9.0",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.3",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4",
		"@types/is-utf8": "^0.2.3"
	}
}
